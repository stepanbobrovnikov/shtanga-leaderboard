# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/polymarket_leaderboard

# Blockchain RPC Provider
# Use Alchemy, Infura, or other Ethereum RPC provider
# Example formats:
#   Alchemy: https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY
#   Infura: https://polygon-mainnet.infura.io/v3/YOUR_API_KEY
RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# USDC Token Address (Polygon Mainnet)
# Official Polygon USDC: 0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174
USDC_TOKEN_ADDRESS=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174

# Starting Block for Deposit Scanning
# Set to tournament start block number to avoid scanning entire blockchain history
# Current Polygon block (Dec 2025): ~65000000
# Leave as 0 to scan from genesis (slow and expensive)
START_BLOCK=65000000

# Polymarket API Configuration (optional)
# If you have API access from Polymarket, add key here
POLYMARKET_API_KEY=

# Admin Authentication
# Generate a secure random string for admin endpoints
ADMIN_KEY=your_secure_admin_key_here

# Scheduler Configuration
# Cron expression for automatic refresh (default: every 12 hours)
# Format: minute hour day month weekday
# Examples:
#   */30 * * * * - Every 30 minutes
#   0 */6 * * *  - Every 6 hours
#   0 */12 * * * - Every 12 hours (default)
#   0 0 * * *    - Once per day at midnight
UPDATE_CRON=0 */12 * * *

# Batch Processing Configuration
# Number of participants to process in each batch (default: 25)
BATCH_SIZE=25

# Server Configuration
PORT=4000
NODE_ENV=production

# Optional: Enable query logging
LOG_QUERIES=false
